@model GestionDesConges.Models.Approval

@{
    ViewData["Title"] = "Delete Approval";
}

<h1>Delete Approval</h1>

<h3>Are you sure you want to delete this approval?</h3>
<div>
    <h4>Approval Details</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Approval ID
        </dt>
        <dd class="col-sm-10">
            @Model.ApprovalId
        </dd>
        <dt class="col-sm-2">
            Approver
        </dt>
        <dd class="col-sm-10">
            @Model.Approver.FullName
        </dd>
        <dt class="col-sm-2">
            Leave Request ID
        </dt>
        <dd class="col-sm-10">
            @Model.LeaveRequestId
        </dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="ApprovalId" />
        <button type="submit" value="Delete" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
