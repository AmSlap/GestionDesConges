@model GestionDesConges.Models.LeaveRequest

@{
    ViewData["Title"] = "Delete Leave Request";
}

<h1>Delete Leave Request</h1>

<h3>Are you sure you want to delete this leave request?</h3>
<div>
    <h4>@Model.AbsenceType</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Employee
        </dt>
        <dd class="col-sm-10">
            @Model.Employee.FullName
        </dd>
        <dt class="col-sm-2">
            Start Date
        </dt>
        <dd class="col-sm-10">
            @Model.StartDate.ToShortDateString()
        </dd>
        <dt class="col-sm-2">
            End Date
        </dt>
        <dd class="col-sm-10">
            @Model.EndDate.ToShortDateString()
        </dd>
        <dt class="col-sm-2">
            Reason
        </dt>
        <dd class="col-sm-10">
            @Model.Reason
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="LeaveRequestId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>
